<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5c9c"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Q_name_1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <RadioGroup
        android:id="@+id/radioGroup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/female_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female_radioBtn"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <RadioButton
            android:id="@+id/male_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male_radioBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </RadioGroup>
    <Button

        android:id="@+id/submitBtn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_Btn"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/resultTextView_id"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        />


</LinearLayout>