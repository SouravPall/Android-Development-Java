<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30b7"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="start"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
       <CheckBox
           android:id="@+id/checkbox_id1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/checkbox_text1"
           android:textSize="20sp"
           android:textStyle="bold"
           />
       <CheckBox
           android:id="@+id/checkbox_id2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/checkbox_text2"
           android:textStyle="bold"
           android:textSize="20sp"
           />
       <CheckBox
           android:id="@+id/checkbox_id3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/checkbox_text3"
           android:textSize="20sp"
           android:textStyle="bold"
           />

    <Button
        android:id="@+id/submitButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/resultTextView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"

        />
</LinearLayout>